{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OxideLauncher",
  "version": "0.1.0",
  "identifier": "com.oxidelauncher.app",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "../ui/dist",
    "beforeBuildCommand": "powershell -c \"cd ../ui; bun run build\""
  },
  "app": {
    "windows": [
      {
        "title": "OxideLauncher",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost http://textures.minecraft.net https: blob: data:; style-src 'self' 'unsafe-inline'; script-src 'self'; font-src 'self' data:",
      "dangerousDisableAssetCspModification": true,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "resources": [],
    "copyright": "Â© 2025 OxideLauncher Contributors",
    "category": "Game",
    "shortDescription": "A Rust-based Minecraft launcher",
    "longDescription": "OxideLauncher is a modern, fast, and feature-rich Minecraft launcher built with Rust and Tauri"
  }
}
